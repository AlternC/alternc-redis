#!/bin/bash -e

case "$1" in
  configure)

    echo "Installing mysql table"
    mysql --defaults-file=/etc/alternc/my.cnf < /usr/share/alternc/install/redis.sql

    # Create quota for all users "sympa" with value 0
    mysql --defaults-file=/etc/alternc/my.cnf -Bse "INSERT IGNORE INTO quotas (uid,name,total) SELECT uid,'redis', 0 FROM membres;" || true

    # Create default quota "sympa" with value 0
    mysql --defaults-file=/etc/alternc/my.cnf -Bse "INSERT IGNORE INTO defquotas (quota,value,type) VALUES ('redis', 0, 'default')" || true

    # recompile translation files
    find /usr/share/alternc/panel/locales -maxdepth 1 -mindepth 1 -type d -name "*_*" | while read A
    do 
        B="$A/LC_MESSAGES"
        cd $B
        rm -f alternc.mo alternc.po
        msgcat --use-first *.po alternc >alternc.po
        msgfmt alternc.po -o alternc.mo
    done

    echo -e "\033[31m**********************************************"
    echo "*                                            *"
    echo "*   ALTERNC-REDIS ACTION REQUESTED           *"
    echo "*                                            *"
    echo "* Please run alternc.install to fully deploy *"
    echo "* Then change your quota to activate Redis   *"
    echo "*                                            *"
    echo "**********************************************"
    echo -e "\033[0m"
    ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

